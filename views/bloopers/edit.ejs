<% include ../partials/header%>

<div class="container" id="jumbotron-container">
    <div class="jumbotron">
        <div class="container">
            <h1>Edit <%= blooper.name %></h1>
        </div>
    </div>
</div>

<!-- Edit form -->
<div class="container">
    <form action="/bloopers/<%= blooper._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <p>Video Type</p>
            <select autocomplete="off" class="form-control" name="blooper[videoType]">
                    <option></option>
                    <option>episode</option>
                    <option selected="selected">blooper</option>
                    <option>vlog</option>
            </select>
        </div>
        <div class="form-group">
            <p>blooper Name</p>
            <input autocomplete="off" type="text" class="form-control" name="blooper[name]" value="<%= blooper.name %>">
        </div>
        <div class="form-group">
            <p>Description</p>
            <input autocomplete="off" class="form-control" type="text" name="blooper[description]" value="<%= blooper.description %>">
        </div>
        <div class="form-group">
            <p>Season Number</p>
            <input autocomplete="off" class="form-control" type="number" name="blooper[season]" value="<%= blooper.season %>">
        </div>
        <div class="form-group">
            <p>blooper Number</p>
            <input autocomplete="off" class="form-control" type="number" name="blooper[number]" value="<%= blooper.number %>">
        </div>
        <div class="form-group">
            <p>Episode URL</p>
            <input autocomplete="off" class="form-control" type="text" name="blooper[url]" value="<%= blooper.url %>">
        </div>
        <div class="form-group">
            <p>Thumbnail Link</p>
            <input autocomplete="off" class="form-control" type="text" name="blooper[thumbnail]" value="<%= blooper.thumbnail %>">
        </div>
        <div class="form-group">
            <button autocomplete="off" class="btn btn-lg btn-primary">Submit</button>
        </div>
        
    </form>
</div>

<% include ../partials/footer%>