<% include ./partials/header%>

<div class="container">
    <div class="row">
        <h1>Create a New Post</h1>
    </div>
    <form action="/videos" method="POST">
        <div class="form-group">
            <p>Video Type</p>
            <select class="form-control">
                <option>Episode</option>
                <option>Blooper</option>
                <option>Vlog</option>
            </select>
        </div>
        <div class="form-group">
            <p>Video Name</p>
            <input type="text" class="form-control" name="name" placeholder="Video Title">
        </div>
        <div class="form-group">
            <p>Description</p>
            <input class="form-control" type="text" name="description" placeholder="description">
        </div>
        <div class="form-group">
            <p>Season Number</p>
            <input class="form-control" type="number" name="seasonnum" placeholder="Season Number">
        </div>
        <div class="form-group">
            <p>Episode Number</p>
            <input class="form-control" type="number" name="episodenum" placeholder="Episode Number">
        </div>
        <div class="form-group">
            <p>Thumbnail Link</p>
            <input class="form-control" type="url" name="thumbnail" placeholder="Thumbnail URL">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary">Submit</button>
        </div>
        
    </form>
</div>

<% include ./partials/footer%>